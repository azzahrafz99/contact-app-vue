<script type="text/x-template" id="contact">
  <tr>
    <td v-show="!isEditing">{{ contact.name }}</td>
    <td v-show="!isEditing">{{ contact.phoneNumber }}</td>
    <td v-show="!isEditing">
      <button v-on:click="showForm">
        Edit
      </button>
      <button v-on:click="deleteContact(contact)">
        Delete
      </button>
    </td>
    <td v-show="isEditing">
      <input type='text' v-model="contact.name" placeholder="Name" />
    </td>
    <td v-show="isEditing">
      <input type='text' v-model="contact.phoneNumber" placeholder="Phone Number" />
    </td>
    <td v-show="isEditing">
      <button v-on:click="hideForm">Update</button>
    </td>
  </tr>
</script>
